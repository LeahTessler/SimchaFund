@using SFund.Data
@model HistoryViewModel

<div class="header">
    <h1>History for @Model.Name</h1>
    <h3>Current Balance: @Model.Balance</h3>
</div>

<div class="row header">
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <tr>
                <th>Action</th>
                <th>Date</th>
                <th>Amount</th>
            </tr>
            @foreach (var transaction in Model.Transactions) 
            {
            <tr>
                @if(transaction.TransactionName!="Deposit")
                {
                <td>
                    Contribution for the @transaction.TransactionName simcha
                </td>
                <td style="text-align: center; vertical-align: middle;">
                    @transaction.Date.ToLongDateString()
                </td>
                <td style="text-align: center; vertical-align: middle;">
                   -@transaction.Amount.ToString("C")
                </td>
                }
                else
                {
                    <td>
                        @transaction.TransactionName 
                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                        @transaction.Date.ToLongDateString()
                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                        @transaction.Amount.ToString("C")
                    </td>
                
                }
            </tr>

            }
           
     
        </table>
    </div>
</div>

<div style="text-align:center;">
    <a class="btn btn-lg btn-danger" href="/contributors">Back to Contributors</a>
</div>
